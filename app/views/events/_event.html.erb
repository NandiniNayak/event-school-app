<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title">
            <%= event.name %>
            <span class="pull-right">
                <%= format_date_time(event.date,event.start_time, event.end_time) %>
            </span>
        </h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
            <%= image_tag event.image, class: "img-responsive" %>
            </div>
            <div class="col-md-8">
                <p class= "lead"><%= event.description %></p>
                <p></p>
                <%= link_to "More info", event_path(event), class:"btn btn-info btn-xs" %>
            </div>
        </div>
    </div>
</div>