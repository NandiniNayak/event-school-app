<h1>Search results</h1>
<% if @events.present?%>
   <h1>Listing Events</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
     
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Status</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        
        <td><%= event.name %></td>
        
        <td><%= event.date.strftime('%a, %d %b %y') %></td>
        <td><%= event.start_time.strftime('%l:%M%P') %></td>
        <td><%= event.end_time.strftime('%l:%M%P') %></td>
        <td><%= event.status %></td>
       
        <td><%= link_to 'Show', event, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class:'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% elsif @exams.present?%>
   <h1>Listing Exams</h1>

<table class="table">
  <thead>
    <tr>
      <th>Sub name</th>
      <th>Grade</th>
      <th>Start date</th>
      <th>Start time</th>
      <th>Description</th>
      <th>Year group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.sub_name %></td>
        <td><%= exam.grade %></td>
        <td><%= exam.start_date %></td>
        <td><%= exam.start_time %></td>
        <td><%= truncate(exam.description) %></td>
        <td><%= exam.year_group.name %></td>
        <td><%= link_to 'Show', exam, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_exam_path(exam),  class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' },  class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p> no matching results for the term <%= params[:serach]%></p>

<% end %>